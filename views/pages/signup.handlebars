<div class="container-fluid">

    <div class="flex-container">
        <div class="flex-child">
            <h1>CampusCompass</h1>
            <p>Welcome to CampusCompass - an online site to help users notify of their
                current lectures and display all event occuring on campus</p>
            <p>Register here to browse through our application!</p>
    </div>
    <div class="flex-child center">
        <div class="form-inner">
            <h2>Signup</h2>
            <form action="/signup" id="form-signup" method="POST">
                <label for="username">Name</label>
                <br>
                <input class="form-input" id="user_name" name="user_name" type="text" placeholder="Name" {{#if user_name }} value={{user_name}} {{/if}} required>
                <br>
                <label for="email">Email</label>
                <br>
                <input class="form-input" id="user_email" name="user_email" type="email"
                    placeholder="mystevens@stevens.edu" {{#if user_email}} value={{user_email}} {{/if}}required> 
                <br>
                <label for="password">Password</label>
                <br>
                <input class="form-input" id="user_password" name="user_password" type="password" placeholder="Password" required>

                <br>
        
                <input type="submit" class="submit-button" value="Register"></input>
            </form>
            <div id="error-form" hidden></div>
            {{#if error_msg}}
            <p class="error">{{error_msg}}</p>
            {{/if}}

            {{#if user_created}}
                <p>User Created!</p>
            {{/if}}
            <a href="/login">Already a User, Click here to Login!</a>
        </div> 
    </div>
</div>
</div>
<script src="/public/js/signup.js"></script>