<div class="container">
  <h1 class="event-name">{{data.name}}</h1>
  <div class="event-details">
    <dl>
      <dt>Event Description:</dt>
      <dd class="event-desc">{{data.desc}}</dd>
      <dt>Event Type:</dt>
      <dd class="event-type">{{data.type}}</dd>
      <dt>Date:</dt>
      <dd class="event-date">{{data.event_date}}</dd>
      <dt>Hours:</dt>
      <dd class="event-hours">{{data.formated_time_start}}
        to
        {{data.formated_time_end}}</dd>
    </dl>
    <div class="event-actions">
      <button class="register-button" data-id="{{data._id}}">Register</button>
      {{#if isAdmin}}
        <button class="edit" data-id="{{data._id}}">Edit</button>
        <button class="delete" data-id="{{data._id}}">Delete</button>
      {{/if}}
    </div>
  </div>
  <div class="map">
    {{>map}}
  </div>
  <a class="back-link" href="/events">Back to all Events</a>
</div>
<div id="custom-dialog" class="dialog">
  <div class="dialog-header">
    <h2 class="dialog-title"></h2>
    <button class="close-dialog">&times;</button>
  </div>
  <div class="dialog-content"></div>
  <div class="dialog-footer">
    <button class="dialog-confirm">Confirm</button>
    <button class="dialog-cancel">Cancel</button>
  </div>
</div>
<style>
  body {
     font-family: 'Helvetica Neue', sans-serif;
     background-color: #f8f8f8;
  }
  .container {
      max-width: 800px;
      margin: 0 auto;
      background-color: #fff;
      padding: 30px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
  }
  h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #a32638;
      /* Use theme color for headings */
  }
  label {
      display: block;
      margin-bottom: 5px;
      font-size: 14px;
      color: #333;
  }
  input, select, textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-bottom: 20px;
      font-size: 14px;
  }
  textarea {
      resize: vertical;
  }
  .error {
      border-color: #f00;
  }
  .back-link {
      display: inline-block;
      margin-top: 20px;
      font-size: 14px;
      color: #333;
      text-decoration: none;
  }
  .back-link:hover {
      text-decoration: underline;
  }
  .event-details, .map {
      margin-bottom: 30px;
  }
  .event-name {
      color: #a32638;
      font-size: 24px;
      margin-top: 0;
  }
  .event-desc {
      margin-top: 5px;
      font-size: 14px;
      line-height: 1.5;
  }
  .event-type {
      margin-top: 5px;
      font-size: 14px;
  }
  .event-date {
      margin-top: 5px;
      font-size: 14px;
  }
  .event-hours {
      margin-top: 5px;
      font-size: 14px;
  }
  .event-actions {
      margin-top: 10px;
  }
  .event-actions button {
      background-color: #a32638;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 10px 20px;
      font-size: 14px;
      margin-right: 10px;
      cursor: pointer;
  }
  .event-actions button:hover {
      background-color: #8c1d2b;
  }
  .register-button {
      background-color: #a32638;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 10px 20px;
      font-size: 14px;
      margin-top: 20px;
      cursor: pointer;
  }
  .register-button:hover {
      background-color: #8c1d2b;
  }

  /* css for dialog */
  .dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: none;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  z-index: 1000;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
  display: none;
  max-width: 500px;
  width: 90%;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.dialog-header h2 {
  margin: 0;
}

.close-dialog {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}

.dialog-content {
  margin-bottom: 10px;
}

.dialog-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.dialog-confirm,
.dialog-cancel {
  margin-left: 10px;
  background-color: #a32638;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.dialog-confirm:hover,
.dialog-cancel:hover {
  background-color: #960b2c;
}

.notification {
  background-color: #fff;
  color: #a32638;
  border: 1px solid #a32638;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
}
</style>
<script src="/public/js/events.js"></script>