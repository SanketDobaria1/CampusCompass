<form action="/events" id="event-create-form" method="POST">
  <h1>Create Event</h1>
  <fieldset>
    <legend>Event Details</legend>
    <div>
      <label for="event_name">Event Name:</label>
      <input id="event_name" name="event_name" type="text" placeholder="Enter event name" required>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="event_desc">Event Description:</label>
      <textarea id="event_desc" name="event_desc" placeholder="Enter event description"></textarea>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="event_type">Event Type:</label>
      <select id="event_type" name="event_type" required>
        <option value="">Select event type</option>
        <option value="Class">Class</option>
        <option value="Event">Event</option>
      </select>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="event_start_date">Start Date:</label>
      <input id="event_start_date" name="event_start_date" type="date" required>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="event_end_date">End Date:</label>
      <input id="event_end_date" name="event_end_date" type="date" required>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="event_days">Event Days:</label>
      <select id="event_days" name="event_days" multiple required>
        <option value="1">Monday</option>
        <option value="2">Tuesday</option>
        <option value="3">Wednesday</option>
        <option value="4">Thursday</option>
        <option value="5">Friday</option>
        <option value="6">Saturday</option>
        <option value="7">Sunday</option>
      </select>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="opening_hours">Opening Hours:</label>
      <input id="opening_hours" name="opening_hours" type="time" min="00:00:00" max="23:59:59" step="1" required>
      <div class="error-msg"></div>
    </div>
    <div>
      <label for="closing_hours">Closing Hours:</label>
      <input id="closing_hours" name="closing_hours" type="time" min="00:00:00" max="23:59:59" step="1" required>
      <div class="error-msg"></div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Event Location</legend>
    <div>
      <label for="location_id">Location:</label>
      <select id="location_id" name="location_id" required>
        <option value="">Select location</option>
        {{#each location}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <div class="error-msg"></div>
    </div>
  </fieldset>
  <input type="submit" class="submit-button" value="Create"></input>
</form>
<div id="custom-dialog-overlay" class="dialog-overlay"></div>
<div id="custom-dialog" class="dialog">
  <div class="dialog-header">
    <h2 class="dialog-title"></h2>
    <button class="close-dialog">&times;</button>
  </div>
  <div class="dialog-content"></div>
  <div class="dialog-footer">
    <button class="dialog-confirm">Confirm</button>
    <button class="dialog-cancel">Cancel</button>
  </div>
</div>
