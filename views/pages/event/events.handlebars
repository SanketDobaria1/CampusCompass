  <h1>{{title}}</h1>
  <form action="/events" method="GET">
    <label for="search-bar">Search</label>
    <input type="text" name="key" placeholder="Search..." />
    <button class="submit" type="submit">Submit</button>
  </form>
  {{#if key}}
    <h3>Results for "{{key}}"</h3>
    <a href="/events">Back to all Events</a>
  {{/if}}
  <ol>
    {{#each data}}
      <li>
        <a href="/events/{{_id}}">{{name}}</a>
        {{#if @root.isAdmin}}
          <br />
          {{!-- <form id="delete-form" method="POST" action="/events/{{_id}}">
            <button type="submit">Delete</button>
          </form>
          <form id="edit-form" method="GET" action="/events/edit/{{_id}}">
            <button type="submit">Edit</button>
          </form> --}}
          {{#if ../isAdmin}}
      <button class="edit" data-id="{{this._id}}">Edit</button>
      <button class="delete" data-id="{{this._id}}">Delete</button>
      {{/if}}
        {{/if}}
        <hr />
      </li>
    {{/each}}
  </ol>

  {{#if isAdmin}}
    <form id="create-form" method="GET" action="/events/create">
      <button type="submit" class="btn btn-sm btn-primary">Create a New Event</button>
    </form>
  {{/if}}
<style>
  /* css for dialog */
  .dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: none;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  z-index: 1000;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
  display: none;
  max-width: 500px;
  width: 90%;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.dialog-header h2 {
  margin: 0;
}

.close-dialog {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}

.dialog-content {
  margin-bottom: 10px;
}

.dialog-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.dialog-confirm,
.dialog-cancel {
  margin-left: 10px;
  background-color: #a32638;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.dialog-confirm:hover,
.dialog-cancel:hover {
  background-color: #960b2c;
}

.notification {
  background-color: #fff;
  color: #a32638;
  border: 1px solid #a32638;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
}

</style>
<script src="/public/js/events.js"></script>