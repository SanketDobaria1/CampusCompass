  <div class="flex-container" style="height: 90vh">
    <div class="flex-child" >
      <h1>{{data.name}}</h1>
      <p>{{data.desc}}</p>
      <p>Building type: {{data.type}}</p>
      <p>Operating Hours: {{data.operating_hours}}</p>
      <p>Accessible Entrances: {{accessibleEntrances}} </p>
    </div>
    <div class="flex-child">
      {{>map}}
    </div>
  </div>
  

  <div class="flex-container">
  {{#if isAdmin}}
    <a href="/rooms/{{data._id}}" class="submit-button">Create a New Room</a>
  {{/if}}


  <div class="container-fluid">
    <div class="row align-items-center">
      {{#each rooms}}
        <div class="cards col-md-4 my-2 col-sm-6">
          <div class="card-body">
            <p>Room Number: {{room_number}}</p>
            <p>Capacity: {{capacity}}</p>
            <p>Floor Number: {{floor_number}}</p>
            <p>Room Type: {{type}}</p>
          </div>
          {{#if @root.isAdmin}}
        <form method="GET" action="/rooms/room/{{_id}}">
          <button
            type="submit"
            class="submit-button">
            Delete</button>
        </form>
      {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
  </div>
  <a href="/locations" class="submit-button">Back to all locations</a>

