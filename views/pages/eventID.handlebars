<main>
  <div class="event-details">
    <h1 class="event-name">{{data.name}}</h1>
    <dl>
      <dt>Event Description:</dt>
      <dd class="event-desc">{{data.desc}}</dd>
      <dt>Event Type:</dt>
      <dd class="event-type">{{data.type}}</dd>
      {{!-- <dt>Date:</dt>
      <dd class="event-date">{{data.date}}</dd> --}}
      <dt>Hours:</dt>
      <dd class="event-hours">{{data.formated_time_start}} to {{data.formated_time_end}}</dd>
    </dl>
    <button class="register-button" data-id="{{data._id}}">Register</button>
    {{#if isAdmin}}
      <div class="event-actions">
        <button class="edit" data-id="{{data._id}}">Edit</button>
        <button class="delete" data-id="{{data._id}}">Delete</button>
      </div>
    {{/if}}
  </div>
  <a class="back-link" href="/events">Back to all Events</a>
</main>
<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .event-details {
    background-color: #f7f7f7;
    padding: 2rem;
    border-radius: 0.5rem;
  }
  .event-name {
    font-size: 2rem;
    margin-top: 0;
    margin-bottom: 1rem;
  }
  dl {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  dt {
    font-weight: bold;
    text-align: right;
    margin-right: 1rem;
  }
  dd {
    margin: 0;
  }
  .register-link {
    display: inline-block;
    margin-top: 1rem;
    font-size: 1.2rem;
    background-color: #007bff;
    color: #fff;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.25rem;
    text-decoration: none;
  }
  .event-actions {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
  }
  .edit, .delete {
    background-color: #007bff;
    color: #fff;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.25rem;
    font-size: 1rem;
    cursor: pointer;
  }
  .back-link {
    display: block;
    margin-top: 2rem;
    font-size: 1.2rem;
    color: #007bff;
    text-decoration: none;
  }
</style>
<script src="/public/js/events.js"></script>