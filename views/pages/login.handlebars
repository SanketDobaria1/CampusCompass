<div class="container-fluid">

<div class="flex-container">
  <div class="flex-child">
    <h1>CampusCompass</h1>
    <p>Welcome to CampusCompass - an online site to help users notify of their
      current lectures and display all event occuring on campus</p>
    <p>Login to browse through application!</p>
  </div>
  <div class="flex-child center">
    <div class="form-inner">
      <h2>Login</h2>
      <form action="/login" id="form-login" method="POST">
        <label for="login_email">Email</label>
        <br />
        <input
          class="form-input"
          id="login_email"
          name="login_email"
          type="email"
          placeholder="mystevens@stevens.edu"
          {{#if email}}
          value="{{email}}"
          {{/if}}
        />
        <br>
        <label for="login_password">Password</label>
        <br>
        <input
          class="form-input"
          id="login_password"
          name="login_password"
          type="password"
          placeholder="Password"
          required
        />
        <br>
        <button class="submit-button" type="submit">Submit</button>
      </form>
      <div id="error-form" hidden></div>
      {{#if error_msg}}
        <p class="error">{{error_msg}}</p>
      {{/if}}
      <a href="/signup">New to Application, Click here to Register!</a>
    </div>
  </div>
</div>
</div>
<script src="/public/js/login.js"></script>